<div class="text-center position-relative" data-view-name="oce-home" id="oceApp">
    {{#if loggedIn}}
    <div class="position-absolute stick-right">
        Witaj, <a href="/profile">{{user.username}}</a>
        <img class="rounded-circle" src="https://www.gravatar.com/avatar/{{emailHash}}?s=64" crossorigin="anonymous" />
    </div>
    {{/if}}
    <img class="ocelot-cover{{#if loggedIn}}-small{{/if}}" src="/img/ocelot.png" />
    <div class="w-50 mt-5 mx-auto">
        <h1 class="display-4 mx-3 mt-3">Ocelot Quiz</h1>
        {{#if loggedIn}}
        <p class="lead">
            <a class="btn btn-primary btn-lg btn-block text-uppercase" href="/quiz?quick=true" role="button">Szybki quiz</a>
        </p>
        <p class="lead">
            <a class="btn btn-primary btn-lg btn-block text-uppercase" href="/quiz" role="button">Quiz</a>
        </p>
        <p class="lead">
            <div class="input-group input-group-lg">
                <input type="text" class="form-control text-uppercase" minlength="6" maxlength="6"
                    placeholder="token" v-model.trim="tokenString" />
                <div class="input-group-append">
                    <button class="btn btn-primary" @click="goToExam">
                        <i class="fa fa-arrow-circle-right"></i>
                    </button>
                </div>
            </div>
        </p>
        {{else}}
        <p class="lead">
            <a class="btn btn-primary btn-lg btn-block" href="/login" role="button">Zaloguj siÄ™</a>
        </p>
        <p class="lead">
            <a class="btn btn-primary btn-lg btn-block" href="/register" role="button">Rejestracja</a>
        </p>
        {{/if}}
    </div>
</div>
<script>
const vm = new Vue({
        el: '#oceApp',
        data: {
            tokenString: ''
        },
        methods: {
            goToExam: function () {
                window.location.pathname = '/solve/' + this.tokenString;
            }
        }
});
</script>